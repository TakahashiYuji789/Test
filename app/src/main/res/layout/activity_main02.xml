<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity02" >

    <ImageView
        android:id="@+id/Coma"
        android:layout_width="145dp"
        android:layout_height="178dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/lose"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="200dp"
        android:text="相手"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/EnemyHand"
        android:layout_width="101dp"
        android:layout_height="76dp"
        android:layout_below="@+id/Coma"
        android:layout_centerHorizontal="true"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/Result"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_above="@+id/PlayerHand"
        android:gravity="center"
        android:text="あんたの勝ち！！"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="92dp"
        android:layout_height="38dp"
        android:layout_below="@+id/Result"
        android:text="あなた"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/PlayerHand"
        android:layout_width="101dp"
        android:layout_height="92dp"
        android:layout_above="@+id/Restart"
        android:layout_centerHorizontal="true"
        android:scaleType="fitCenter" />

    <Button
        android:id="@+id/Restart"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="32dp"
        android:onClick="onClick"
        android:text="次のシーンへ"
        android:textSize="30sp" />

</RelativeLayout>