<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Result" >

    <TextView
        android:id="@+id/FinalResult"
        android:layout_width="319dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:gravity="center"
        android:text="結果発表！！"
        android:textSize="36sp" />

    <Button
        android:id="@+id/button"
        android:layout_width="353dp"
        android:layout_height="66dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="37dp"
        android:onClick="onButtonTitle"
        android:text="タイトルへ"
        android:textSize="36sp" />

    <ImageView
        android:id="@+id/ResultImage"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="95dp"
        app:srcCompat="@drawable/youlose" />

    <TextView
        android:id="@+id/WinCount01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="TextView"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/LoseCount01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/WinCount01"
        android:text="TextView"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/DrawCount01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LoseCount01"
        android:text="TextView"
        android:textSize="36sp" />

</RelativeLayout>